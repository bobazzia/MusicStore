@model MusicStore.ViewModels.Administrator.AdministratorUsersViewModel

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">E-mail</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Comments Count</th>
            <th scope="col">Orders Count</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users.OrderBy(x => x.Email))
        {
            
            <tr>
                <td>@user.Email</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.PhoneNumber</td>
                <td>@user.Comments.Count</td>
                <td>@user.Orders.Count</td>

                <td>
                    <form method="post" asp-controller="AdministratorUsers" asp-action="Users" asp-route-id="@user.Id">
                        <button type="submit" data-item-id="@user.Id">Delete User</button>
                    </form>
                </td>
            </tr>

        }
    </tbody>
</table>