@using MusicStore.ViewModels.Account
@model MusicStore.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<form method="post" class="center-block">
    <hr style="height: 3px; background-color: black" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-xs-6">
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" placeholder="Имейл..." asp-route/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Парола..." />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RememberMe"></label>
                <input asp-for="RememberMe" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <button type="submit"  class="btn btn-default" style="background-color: black; color: white">Вход</button>
    </div>
</form>