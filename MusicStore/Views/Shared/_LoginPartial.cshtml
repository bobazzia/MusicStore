@using Microsoft.AspNetCore.Identity

@inject SignInManager<MusicStoreUser> SignInManager
@inject UserManager<MusicStoreUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    
    <form asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right" charset="utf-8">

            <li>
                <div class="dropdown">
                    <div class="dropbtn">Hello, @UserManager.GetUserName(User)!</div>
                    <div class="dropdown-content">
                        <a asp-controller="UserProfile" asp-action="Order" title="Manage">Your Currnent Order</a>
                        <a asp-controller="UserProfile" asp-action="PreviousOrders" title="Manage">Previous Orders</a>
                        <a asp-controller="UserProfile" asp-action="ProfileInformation" title="Manage">Profile Information</a>
                    </div>
                </div>
                
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right" charset="utf-8">
        <li><a asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-controller="Account" asp-action="Login">Login</a></li>
    </ul>
}